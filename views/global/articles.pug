extends global

block content
  #content-container.container-fluid
    table.table.d-none
      thead
        tr.border-bottom.border-dark
          th Package
          th Name
          th Author(s)
          th Updated
      tbody
        each x in articles
          tr
            td
              a.text-dark(href=`https://${x.universe}.r-universe.dev/${x.package}`) #{x.package}
            td.w-50
              a(target='_blank' href=`https://${x.universe}.r-universe.dev/articles/${x.package}/${x.filename}`) #{x.title}
            td.w-25 #{x.author}
            td.text-nowrap #{format_yymmdd(x.updated)}

block after_scripts
  script(src='https://cdn.datatables.net/2.1.3/js/dataTables.min.js')
  script
    include articles.js
