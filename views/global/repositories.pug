extends global

block content
  #content-container.container-fluid
    table.table.d-none
      thead
        tr.border-bottom.border-dark
          th Universe
          th Packages
          th Indexed
          th Maintainers
          th Type
          th Name
          th Updated
      tbody
        each x in repos
          tr
            td
              a(href=`https://${x.universe}.r-universe.dev`) #{x.universe}
            td #{x.packages}
            td #{x.indexed}
            td #{x.maintainers}
            td #{x.type}
            td #{x.name}
            td.text-nowrap #{format_yymmdd(x.updated*1000)}

block after_scripts
  script(src='https://cdn.datatables.net/2.1.3/js/dataTables.min.js')
  script
    include repositories.js
